.wrap {
  background-size: cover;
  width: 100%;
  min-height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
  background-repeat: no-repeat;
  opacity: 0.7;
}
.grid-text {
  font-size: 14px;
  color: #303133;
  padding: 10rpx 0 20rpx 0rpx;
  box-sizing: border-box;
}
.time {

  display: flex;

  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}
.time__custom {
  margin-top: 4px;
  width: 22px;
  height: 22px;
  background-color: #3c9cff;
  border-radius: 4px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.time__custom__item {
  color: #fff;
  font-size: 12px;
  text-align: center;
}
.time__doc {
  color: #3c9cff;
  padding: 0px 4px;
}
.time__item {
  color: #606266;
  font-size: 15px;
  margin-right: 4px;
}

